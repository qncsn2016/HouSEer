<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightLightBlue"
    tools:context="com.example.zq.houseer0410.Welcome">

<!--背景图 据说很丑
    <ImageView
        android:id="@+id/welcome_imageView_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="0.4"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/welcome_building_2" />
-->

    <TextView
        android:id="@+id/welcome_textView_touse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="24dp"
        android:contentDescription="@null"
        android:text="欢迎使用 > > >"
        android:textColor="@color/DarkBlue"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/welcome_imageView_logo"
        android:layout_width="367dp"
        android:layout_height="320dp"
        android:layout_marginEnd="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />


</android.support.constraint.ConstraintLayout>
